<div class="container">
  <%= render @food %>

  <div>
    <h1 class="food_name"><%= @food.name %></h1>
    <div class="food_price">
      <p>Measurement unit: <%= @food.measurement_unit %></p>
      <p>Unit price: $<%= @food.price %></p>
      <p>Quantity: <%= @food.quantity %></p>
    </div>

    <div class="update_food_btn">
      <% if @food.user_id == current_user.id %>
        <%= button_to "Delete", @food, method: :delete %>
      <% end %>
    </div>

    <%= link_to "Back to foods", foods_path %>
  </div>
</div>
