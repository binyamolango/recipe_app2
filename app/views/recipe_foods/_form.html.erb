<%= form_with(model: [@recipe, recipe_food]) do |form| %>
  <% if recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>

    <div>
    </div>

    <form class="row row-cols-lg-auto g-3 align-items-center">
      <div class="col-12">
        <%= form.select :food_id, options_for_select(Food.all.map { |food| ["#{food.name} (in #{food.measurement_unit})", food.id] }), { include_blank: 'Select food' }, { class: 'form-select' } %>
      </div>

      <div class="row mb-3 quantity_input">
        <%= form.label :quantity, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.number_field :quantity, placeholder: "12", class: "form-control" %>
        </div>
      </div>

      <div class="col-12">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </form>
  </div>
<% end %>
